{
  "openapi": "3.0.0",
  "info": {
    "title": "Pocket Coin",
    "description": "Documentation from pocket coin api",
    "version": "1.0.0"
  },
  "basePath": "/",

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },

  "paths": {
    "/v1/user": {
      "post": {
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "email"
                  },
                  "password": {
                    "type": "password"
                  }
                },
                "example": {
                  "name": "yourname",
                  "surname": "yoursurname",
                  "email": "youremail@youremail.com",
                  "password": "yourpassword"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/delete/": {
      "delete": {
        "description": "Rota que deleta pelo e-mail",
        "sumary": "Busca o usuário pelo e-mail",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/users": {
      "get": {
        "description": "Rota que busca todos os usuários",
        "sumary": "Busca todos os usuários",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },

    "/v1/news": {
      "get": {
        "description": "Rota que busca todas as notícias",
        "sumary": "Busca pelas notícias",
        "tags": ["News"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/amount": {
      "get": {
        "description": "Rota que busca ",
        "sumary": "Busca todos os usuários",
        "tags": ["Amounts"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/auth": {
      "post": {
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "email"
                  },
                  "password": {
                    "type": "password"
                  }
                },
                "example": {
                  "email": "youremail@youremail.com",
                  "password": "yourpassword"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
